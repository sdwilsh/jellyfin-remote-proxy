{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^.devcontainer/devcontainer.json$/"
      ],
      "matchStrings": [
        "\\srenovate:\\s+datasource=(?<datasource>.*?)\\sdepName=(?<depName>.*?)\\n\\s*\"[a-z]+\":\\s+\"(?<currentValue>.*?)\""
      ]
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/.*\\.yml$/"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?)\\s+depName=(?<depName>.*?)(\\s+versioning=(?<versioning>.*?))?\\s+(?:[a-z\\-_]+)?version:\\s+\"(?<currentValue>.*?)\""
      ]
    }
  ],
  "extends": [
    "github>marinatedconcrete/config//renovate/devcontainer#renovate-config-2.1.1",
    "github>marinatedconcrete/config//renovate/marinatedconcrete#renovate-config-2.1.1",
    "github>marinatedconcrete/config//renovate/recommended#renovate-config-2.1.1"
  ],
  "packageRules": [
    {
      "automerge": true,
      "automergeType": "branch",
      "groupName": "rust-deps",
      "matchManagers": [
        "cargo"
      ],
      "schedule": [
        "after 4pm on friday"
      ]
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "groupName": "renovate",
      "matchPackageNames": [
        "renovatebot/renovate"
      ],
      "schedule": [
        "after 4pm on friday"
      ]
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "groupName": "release-plz",
      "matchPackageNames": [
        "/release-plz/"
      ],
      "schedule": [
        "after 4pm on friday"
      ]
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "groupName": "rust",
      "matchPackageNames": [
        "/^rust/"
      ],
      "schedule": [
        "after 4pm on friday"
      ]
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "groupName": "sozu",
      "matchPackageNames": [
        "/^sozu/"
      ],
      "schedule": [
        "after 4pm on friday"
      ]
    }
  ],
  "timezone": "America/Los_Angeles"
}
